.tabbar_box{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 999;
    width: 100%;
    height: 110rpx;
    /* box-shadow: 0 0 2px rgba(204, 204, 204, 204); */
}
.tabbar_box.iphoneX-height{
    padding-bottom: 66rpx;
   
}
.middle-wrapper{
  position: absolute;
  right: 310rpx;
  bottom: 0;
  background-color: #fff;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  /* border-top: 2rpx solid #ccc; */
}
.middle-wrapper.iphoneX-height{
  bottom: 66rpx;
}
.tabbar_nav{
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 20rpx;
    height: 100%;
    position: relative;
}
.tabbar_icon{
    width: 56rpx;
    height: 56rpx;
}
.special-wrapper{
  position: absolute;
  left: 1;
  top: -36rpx;
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  /* border-top: 2rpx solid #ccc; */
  background-color: #fff;
  text-align: center;
  box-sizing: border-box;
  padding: 6rpx;
}
.special-wrapper .tabbar_icon{
    width: 95rpx;
    height: 95rpx;
}
.special-text-wrapper{
  width: 56rpx;
  height: 56rpx;
}