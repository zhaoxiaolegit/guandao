/* pages/slefCenter/slefCenter.wxss */
page{
  background-color: #F4F5F4;
}
.container{
  width: 100%;
  height: 100%;
}
.headerBox{
  display: flex;
  align-items: center;
  justify-content:space-around;
  margin: 0 auto;
  margin-top: 20rpx;
  width: 100%;
  height: 200rpx;
  background-color: #fff;
}
.headerInnerBox{
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 90%;
  height: 112rpx;
  /* background-color: yellow; */
}
.useImage{
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  border: 2rpx solid #FF8201
}
.useImage image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.userName_companyName{
  width: 540rpx;
  height: 100%;
  /* background-color: yellowgreen; */
  display:flex;
  flex-direction: column;
  justify-content: space-around;
}
.userName{
  font-size: 36rpx;
  color: #2C332D;
}
.companyName{
  font-size: 26rpx;
  color: #919498

}

/* 底部的 */
.bottomOutBox{
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin-top: 20rpx;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
}
.companyInformation{
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 90%;
  height: 45rpx;
  /* background-color: yellow;  */
}
.logo{
  width: 45rpx;
  height: 45rpx;
}
.center{
  width: 550rpx;
  height: 100%;
  /* background-color: yellowgreen; */
  font-size: 30rpx;
  color: #515654;
  line-height: 45rpx;
}
.jiantou{
  width: 26rpx;
  height: 26rpx;
}
.bottomOutBoxs{
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin-top: 20rpx;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
}
